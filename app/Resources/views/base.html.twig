{% set route = app.request.attributes.get('_route') %}
{% set authenticated = is_granted('IS_AUTHENTICATED_FULLY') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('style.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	<div id="main-container">
        	<div id="menu-container">
        	{% if authenticated %}
                <p>
                	Zalogowany jako: <b>{{ app.user }}</b> - <a href="/logout">wyloguj</a> 
                </p>
            {% endif %}
        		<p>
        			  <a href="/" class="{{ (route == 'homepage') ? 'active' : '' }}">strona główna</a> | <a href="/products" class="{{ route == 'products' ? 'active' : '' }}">lista produktów</a>
        	{% if authenticated %}
                	 | <a href="/admin/new-product" class="{{ route == 'new_product' ? 'active' : '' }}">dodaj produkt</a>
            {% else %}
            	     | <a href="/login" class="{{ route == 'login' ? 'active' : '' }}">zaloguj</a>
            {% endif %}
            	</p>
            </div>
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
